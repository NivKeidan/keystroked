---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Page Not Found | Keystroked" description="The page you're looking for doesn't exist.">
	<main class="container mx-auto px-6 py-12 2xl:w-[1400px]">
		<div class="max-w-2xl mx-auto text-center fade-in">
			<div class="mb-8">
				<h1 class="text-6xl md:text-8xl font-mono font-bold text-foreground mb-4">
					<span class="text-primary text-glow-green">404</span>
				</h1>
			</div>

			<p class="text-xl md:text-2xl font-mono text-foreground mb-4">
				Page not found
			</p>
			<p class="text-lg text-muted-foreground mb-8 leading-relaxed">
				The page you're looking for doesn't exist or has been moved.
			</p>

			<a
				href="/"
				class="inline-block px-6 py-3 bg-primary text-primary-foreground font-mono rounded-lg hover:opacity-90 transition-opacity text-glow-green"
			>
				Return to home
			</a>
		</div>
	</main>
</BaseLayout>

